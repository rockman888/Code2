<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" >
        <shape>
            <padding android:top="5dp" android:bottom="5dp"/>
            <stroke android:width="1dp" android:color="#AEAEAE"/>
            <gradient
                android:startColor="#F7F7F7"
                android:endColor="#D6D6D6"
                android:angle="270" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <padding android:top="5dp" android:bottom="5dp"/>
            <stroke android:width="1dp" android:color="#CC0000"/>
            <gradient
                android:startColor="#F7F7F7"
                android:endColor="#D6D6D6"
                android:angle="270" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="5dp" android:bottom="5dp"/>
             <stroke android:width="1dp" android:color="#AEAEAE"/>
            <gradient
                android:startColor="#F7F7F7"
                android:endColor="#D6D6D6"
                android:angle="270" />
        </shape>
    </item>
</selector>





